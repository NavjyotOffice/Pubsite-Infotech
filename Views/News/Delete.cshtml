@model InfotechVision.Models.News

@{
    ViewData["Title"] = "Delete";
    string Path = "~/uploads/news/images/" + Model.ContentDetail.Image;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>News</h4>
    <hr />
    <form asp-action="Delete">
        <div class="row row-bordered">
            <div class="col-md-2"><h4>@Html.DisplayNameFor(model => model.NewsType)</h4></div>
            <div class="col-md-10">@Html.DisplayFor(model => model.NewsType)</div>
        </div>
        <div class="row row-bordered">
            <div class="col-md-2"><h4>@Html.DisplayNameFor(model => model.ContentDetail.Title)</h4></div>
            <div class="col-md-10">@Html.DisplayFor(model => model.ContentDetail.Title)</div>
        </div>
        <div class="row row-bordered">
            <div class="col-md-2"><h4>@Html.DisplayNameFor(model => model.ContentDetail.Description)</h4></div>
            <div class="col-md-10">@Html.DisplayFor(model => model.ContentDetail.Description)</div>
        </div>
        <div class="row row-bordered">
            <div class="col-md-2"><h4>@Html.DisplayNameFor(model => model.ContentDetail.URL)</h4></div>
            <div class="col-md-10">@Html.DisplayFor(model => model.ContentDetail.URL)</div>
        </div>
        <div class="row row-bordered">
            <div class="col-md-2"><h4>@Html.DisplayNameFor(model => model.ContentDetail.Author)</h4></div>
            <div class="col-md-10">@Html.DisplayFor(model => model.ContentDetail.Author)</div>
        </div>
        <div class="row row-bordered">
            <div class="col-md-2"><h4>@Html.DisplayNameFor(model => model.ContentDetail.Keywords)</h4></div>
            <div class="col-md-10">@Html.DisplayFor(model => model.ContentDetail.Keywords)</div>
        </div>
        <div class="row row-bordered">
            <div class="col-md-2"><h4>Banner Image</h4></div>
            <div class="col-md-10"><img asp-append-version="true" src="@Path" class="col-md-10" alt="Image" /></div>
        </div>
        <div class="row row-bordered">
            <div class="col-md-2"><h4>@Html.DisplayNameFor(model => model.ContentDetail.CompanyName)</h4></div>
            <div class="col-md-10">@Html.DisplayFor(model => model.ContentDetail.CompanyName)</div>
        </div>
        <div class="row row-bordered">
            <div class="col-md-2"><h4>@Html.DisplayNameFor(model => model.NewsDate)</h4></div>
            <div class="col-md-10">@Html.DisplayFor(model => model.NewsDate)</div>
        </div>
        <div class="row row-bordered">
            <div class="col-md-2"><h4>@Html.DisplayNameFor(model => model.ContentDetail.HideOnSite)</h4></div>
            <div class="col-md-10">@Html.DisplayFor(model => model.ContentDetail.HideOnSite)</div>
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
