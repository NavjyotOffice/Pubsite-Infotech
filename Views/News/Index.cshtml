@model IEnumerable<InfotechVision.Models.News>

@{
    ViewData["Title"] = "Index";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Users <small>Some examples to get you started</small></h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.ContentDetail.Title)</th>
                                    <th>@Html.DisplayNameFor(model => model.NewsDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.NewsType)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><a asp-action="Details" asp-controller="News" asp-route-id="@item.NewsID">@Html.DisplayFor(modelitem => item.ContentDetail.Title)</a></td>
                                        <td>@Html.DisplayFor(modelitem => item.NewsDate)</td>
                                        <td>@Html.DisplayFor(modelitem => item.NewsType)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->