@model IEnumerable<Company>

@{
    ViewData["Title"] = "Index";
    string Path = "~/uploads/companies/images/";
}


<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>All Events</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Logo</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a asp-action="Details" asp-controller="Companies" asp-route-id="@item.CompanyID">@Html.DisplayFor(modelitem => item.CompanyName)</a></td>
                                    <td><a asp-action="Details" asp-controller="Companies" asp-route-id="@item.CompanyID"><img asp-append-version="true" src="@Path@item.LogoImage" style="width:50px"></a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
